<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/card_background_selector"
    android:descendantFocusability="afterDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvTitle"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="---"
        android:textColor="#ff0000"
        android:layout_gravity="top"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvMsg"
        android:gravity="right"
        android:textSize="25sp"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asasasas">
        <ImageView
            android:id="@+id/fav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/nff"
            android:layout_gravity="right"/>

        <ImageView
            android:id="@+id/shared"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@drawable/wha"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/fav"
            android:layout_toEndOf="@+id/fav"
             />
        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@mipmap/sha"
            android:layout_toRightOf="@+id/copy"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/copy"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@mipmap/copyc"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/share"
            android:layout_toStartOf="@+id/share" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:id="@+id/new_Msg"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/copy"
            android:src="@drawable/new_msg"
            android:visibility="invisible"/>

    </LinearLayout>

</LinearLayout>
